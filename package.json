{
  "name": "@wiit/vue3-helper",
  "version": "0.0.10",
  "description": "vue3开发常用辅助工具",
  "keywords": [
    "vue3",
    "hooks",
    "utils",
    "directives",
    "components",
    "helper"
  ],
  "homepage": "https://github.com/ztyangt/vue3-helper#readme",
  "bugs": {
    "url": "https://github.com/ztyangt/vue3-helper/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ztyangt/vue3-helper.git"
  },
  "license": "MIT",
  "author": {
    "name": "ztyangt",
    "email": "ztyangt@yeah.com"
  },
  "files": [
    "dist/**"
  ],
  "type": "module",
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.umd.cjs"
    },
    "./dist/index.css": "./dist/index.css",
    "./dist/remix.css": "./dist/remix.css",
    "./dist/fonts.css": "./dist/fonts.css"
  },
  "scripts": {
    "dev": "vite",
    "test": "vitest",
    "build": "tsc && vite build",
    "docs:dev": "vitepress dev docs --port 8000",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "pack": " ./scripts/pack.sh"
  },
  "devDependencies": {
    "@arco-design/web-vue": "^2.57.0",
    "@arco-plugins/vite-vue": "^1.4.5",
    "@types/node": "^22.15.30",
    "@wiit/vue3-helper": "^0.0.9",
    "markdown-it-custom-attrs": "^1.0.2",
    "markdown-it-mathjax3": "^4.3.2",
    "sass-embedded": "^1.89.1",
    "typescript": "~5.7.3",
    "unplugin-auto-import": "^19.3.0",
    "unplugin-vue-components": "^28.7.0",
    "vite": "^6.1.1",
    "vite-plugin-dts": "^4.5.4",
    "vite-plugin-glsl": "^1.5.0",
    "vite-plugin-static-copy": "^3.0.0",
    "vitepress": "^1.6.3",
    "vitest": "^3.2.3"
  },
  "dependencies": {
    "@vueuse/core": "^13.3.0",
    "b-tween": "^0.3.3",
    "vue": "^3.5.16"
  }
}
